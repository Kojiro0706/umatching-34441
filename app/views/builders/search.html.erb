<main class="main">
  <div class="inner">
      <h1 class="search__hedding">
        検索結果/SERACH RESULTS
      </h1>
      <%# 検索結果の個数で条件分岐 %>
      <div class="card__wrapper">
        <% if @results.length !=0 %>
        <% @results.each do |result| %>
          <div class="card">
          <a class="card__user">
              <%= result.user.name%></a>
          <a class="card__img">
            <%= image_tag(result.image)%></a>
            <div class="card__body">
            <a class="card__title">
            <%=result.title%></a>
            <p class="card__summary">
              <%= result.category.name%>
            </p>
              </div>
            </div>
        <% end %>
        <% else %>
        該当する投稿はありません
        <% end %>
      </div>
  </div>
</main>