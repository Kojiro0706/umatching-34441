<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@user.name}のプロフィール"%>
      </h2>
      <div class="user__information">
      <div class="user__image">
      <%= image_tag(@user.image)%>
      </div>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.name %></td>
          </tr>
          <tr>
            <th class="table__col1">プロフィール</th>
            <td class="table__col2"><%= @user.profile%></td>
          </tr>
          <tr>
            <th class="table__col1">馬女歴</th>
            <td class="table__col2"><%= @user.history%>年生</td>
          </tr>
          <tr>
            <th class="table__col1">好きな競走馬</th>
            <td class="table__col2"><%= @user.horse %></td>
          </tr>
        </tbody>
      </table>
      </div>
      <h2 class="page-heading">
        <%="#{@user.name}の投稿一覧"%>
      </h2>
      <div class="user__card">
        <%=render partial: "builders/builder",collection: @builders %>
      </div>
    </div>
  </div>
</div>